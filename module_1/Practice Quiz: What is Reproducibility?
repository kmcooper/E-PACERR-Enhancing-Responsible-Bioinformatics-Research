  <script>
    (function () {
      const FEEDBACK = {
        "q1-a1": "Reading the results of a paper and thinking critically about them is not reproducibility. Critical analysis can lead to a reproducibility study, but reproducibility requires taking action to verify results.",
        "q1-a2": "Correct. Examining consistency of results after re-running an experiment or method is reproducibility. Internal checks can be good practice and support future reproducibility by others.",
        "q1-a3": "Re-running an experiment to make sure you did it right can be a validation step, but it is not typically framed as reproducing another group’s published work.",
        "q1-a4": "Re-running an experiment with different methods/conditions to see whether results change aligns more with replicability than reproducibility.",

        "q2-a1": "Critical reading is valuable, but replicability involves re-running studies (often with new data or changed conditions/methods).",
        "q2-a2": "This describes reproducibility (same data/methods), not replicability (new data and/or new methods/conditions).",
        "q2-a3": "Running the same conditions is closer to reproducibility/validation than replicability.",
        "q2-a4": "Correct. Replicability involves testing whether findings hold under different conditions and/or with new data.",

        "q3-a1": "This is a strong example of computational reproducibility (re-running analysis with original data/code to verify identical results).",
        "q3-a2": "This aligns with computational reproducibility if the same data and computational steps are used to confirm reported findings.",
        "q3-a3": "Correct. Re-generating a Western blot via wet-lab procedures is not a computational reproducibility study.",
        "q3-a4": "This is computational reproducibility when the same pipeline and same input files produce the same outputs."
      };

      function getSelectedValue(form, name) {
        const checked = form.querySelector(`input[name="${name}"]:checked`);
        return checked ? checked.value : null;
      }

      function setFeedback(el, isCorrect, message) {
        el.hidden = false;
        el.classList.remove("ok", "bad");
        el.classList.add(isCorrect ? "ok" : "bad");
        el.innerHTML = `<strong>${isCorrect ? "Correct." : "Not quite."}</strong> ${message}`;
      }

      const form = document.getElementById("quiz-form");
      const checkBtn = document.getElementById("check-btn");
      const scorebox = document.getElementById("scorebox");
      const scoreline = document.getElementById("scoreline");
      const scorehint = document.getElementById("scorehint");

      checkBtn.addEventListener("click", function () {
        const questions = Array.from(form.querySelectorAll("fieldset.q"));
        let correctCount = 0;
        let answeredCount = 0;

        questions.forEach((fs, idx) => {
          const qNum = idx + 1;
          const qName = "q" + qNum;
          const correctId = fs.getAttribute("data-correct");
          const chosen = getSelectedValue(form, qName);
          const fb = document.getElementById(`${qName}-feedback`);

          if (!chosen) {
            fb.hidden = false;
            fb.classList.remove("ok", "bad");
            fb.classList.add("bad");
            fb.innerHTML = "<strong>Please choose an answer.</strong>";
            return;
          }

          answeredCount++;
          const isCorrect = (chosen === correctId);
          if (isCorrect) correctCount++;

          const msg = FEEDBACK[chosen] || "Feedback unavailable.";
          setFeedback(fb, isCorrect, msg);
        });

        scorebox.hidden = false;
        scoreline.textContent = `Score: ${correctCount} / ${questions.length}`;
        scorehint.textContent =
          answeredCount < questions.length
            ? "Finish any unanswered questions and select “Check answers” again."
            : "Nice work—review the feedback to reinforce key differences between reproducibility and replicability.";

        scorebox.scrollIntoView({ behavior: "smooth", block: "start" });
      });

      form.addEventListener("reset", function () {
        const feedbacks = form.querySelectorAll(".feedback");
        feedbacks.forEach(fb => { fb.hidden = true; fb.classList.remove("ok", "bad"); fb.textContent = ""; });
        scorebox.hidden = true;
        scoreline.textContent = "";
        scorehint.textContent = "";
      });
    })();
  </script>
</body>
